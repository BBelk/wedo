

<p id="notice"><%= notice %></p>

<h1>My Lists</h1>

<% @lists.each do |list| %>
  <div class="panel panel-<%= list.user.email == current_user.email ? 'success' : 'warning' %>">
    <div class="panel-heading">
      <h3 class="panel-title"><%= list.name %></h3>
    </div>
    <div class="panel-body">
      <p> To be done by: 
        <%= list.due_date %><br/>
        <% if list.user.email != current_user.email %>
           Shared By <%= list.user.email %>
           <% end %>
      </p>
      <%= link_to 'Show', list %>
      <%= link_to 'Edit', edit_list_path(list) %>
      <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %>
      <%= link_to 'Share', shared_lists_share_the_list_path(:list_id => list.id) %>
    </div>
  </div>
<% end %>


<br />
<%= link_to 'New List', new_list_path %>
<br />

<h3>Your Calendar</h3>

<%= month_calendar events: @lists do |date, lists| %>
<%= date %>

<% lists.each do |lists|  %>
  <div>
    <%= lists.name %>
  </div>
<% end %>

<% end %>
  


